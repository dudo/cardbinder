<% provide(:title, "Sign in") %>

<div class='container'>
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 well">
      <h1 class='col-lg-offset-2 text-center'>Sign in</h1>
      <%= form_for :session, url: sessions_path, html: {class: "form-horizontal", role: "form"} do |f| %>
        <% if flash.present? %>
          <div id="error_explanation">
            <div class="alert alert-error">
              <%= flash.to_h.values.first %>
            </div>
          </div>
        <% end %>
        
        <div class="form-group">
          <%= f.label :email, class: "col-lg-2 control-label" %>
          <div class="col-lg-8">
            <%= f.text_field :email, class: 'form-control', placeholder: 'john.smith@email.com' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password, class: "col-lg-2 control-label" %>
          <div class="col-lg-8">
            <%= f.password_field :password, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-offset-2 col-lg-8">
            <%= f.submit "Sign in", class: "btn btn-primary" %>
            - or - <%= link_to "Sign up", signup_path %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

